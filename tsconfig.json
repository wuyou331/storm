{
  "ts-node": {
    // This can be omitted when using ts-patch
    "compiler": "ttypescript",  
  },
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "plugins": [
      {
        "transform": "tst-expression-transformer"
      }
    ]
  },
  "include": [  
    "src/*.ts"
  ]
}