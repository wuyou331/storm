{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "experimentalDecorators": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "plugins": [
      {
        "transform": "tst-expression-transformer"
      }
    ]
  },
  "include": [
    "packages/*/src/*.ts",
    "packages/*/index.ts"
  ]
}